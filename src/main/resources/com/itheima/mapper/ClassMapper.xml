<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.mapper.ClassMapper">
    <update id="update">
        update db02.class_info
        <set>
            <if test="className != null and className != ''">
                class_name = #{className},
            </if>
            <if test="roomName != null and roomName != ''">
                room_name = #{roomName},
            </if>
            <if test="emp.id != null">
                emp_id = #{emp.id},
            </if>
            <if test="startTime != null">
                  start_time = #{startTime},
            </if>
            <if test="endTime != null">
                end_time = #{endTime},
            </if>
        </set>
        where id = #{id}
    </update>
    <select id="search" resultMap="clazzWithEmpResultMap1">
        select *
        from db02.class_info
        <where>
            <if test="className != null and className != ''">
                class_name like concat('%', #{className}, '%')
            </if>
            <if test="startTime != null">
                 and start_time &gt;= #{startTime}
            </if>
            <if test="endTime != null">
                and end_time &lt;= #{endTime}
            </if>
        </where>
        order by id
    </select>
    <resultMap id="clazzWithEmpResultMap1" type="com.itheima.pojo.Clazz">
        <id property="id" column="id"/>
        <result property="className" column="class_name"/>
        <result property="roomName" column="room_name"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>

        <association property="emp" javaType="com.itheima.pojo.Emp">
            <id property="id" column="emp_id"/>
        </association>
    </resultMap>


    <select id="list" resultMap="clazzWithEmpResultMap">
        SELECT *
        FROM db02.class_info, db02.emps_info where class_info.emp_id = emps_info.id
    </select>

    <resultMap id="clazzWithEmpResultMap" type="com.itheima.pojo.Clazz">
        <id property="id" column="id"/>
        <result property="className" column="class_name"/>
        <result property="roomName" column="room_name"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>

        <association property="emp" javaType="com.itheima.pojo.Emp">
            <id property="id" column="emp_id"/>
        </association>
    </resultMap>


    <delete id="delete">
        delete
        from db02.class_info
        where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
</mapper>