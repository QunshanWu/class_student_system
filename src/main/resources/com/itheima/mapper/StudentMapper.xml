<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.mapper.StudentMapper">
    <update id="update">
        update db02.student
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="educationId != null">
                education_id = #{educationId},
            </if>
            <if test="classId != null">
                student_class_id = #{classId},
            </if>
            <if test="number != null and number != ''">
                number = #{number},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="delete">
        delete
        from db02.student
        where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <select id="search" resultMap="clazzWithStudentResultMap">
        SELECT *
        FROM db02.student
        <where>
            <if test="name != null and name != ''">
                student.name LIKE concat('%', #{name}, '%')
            </if>
            <if test="educationId != null and educationId != ''">
                AND education_id = #{educationId}
            </if>
            <if test="studentClass.id != null">
                AND class_id = #{studentClass.id}
            </if>
            <if test="number != null and number != ''">
                AND number LIKE concat('%', #{number}, '%')
            </if>
        </where>
    </select>

    <resultMap id="clazzWithStudentResultMap" type="com.itheima.pojo.Student">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="number" column="number"/>
        <result property="gender" column="gender"/>
        <result property="phone" column="phone"/>
        <result property="educationId" column="education_id"/>
        <result property="updatetime" column="update_time"/>

        <association property="studentClass" javaType="com.itheima.pojo.ClassDTO">
            <id property="id" column="class_id"/>
        </association>
    </resultMap>

</mapper>